
<button type="button" class="btn btn-default btn-lg"  data-toggle="modal" data-target="#previewFile" id="previewFileBtn">Preview</button>

<div class="modal fade" id="previewFile">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <h4 class="modal-title">Preview</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>

            <div class="modal-body" id="previewArea">

                @foreach (string text in ViewBag.Data)
                {
                    <h4>@text</h4>
                }

            </div>

            <div class="modal-footer">

            </div>

        </div>
    </div>
</div>
<script>
        $(document).ready(function () {
            $("#previewFileBtn").click(function (fileName) {
                window.location.href = '@Url.Action("PreviewFile", "FCAController")?fileName=' + fileName;
                $("#previewFile").modal();
            });
        });
</script>
