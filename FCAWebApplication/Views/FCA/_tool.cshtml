<div class="row">
    <div id="uploadFile" class="col-md-4">

        @using (Html.BeginForm("UploadFile", "FCA", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div>
                <br />
                <p>Select a .CSV, .CGIF or a .CXT File:.</p>
                @Html.TextBox("file", "", new { type = "file" }) <br />
                <input type="submit" value="Upload" accept=".csv,.cgif,.cxt" id="uploadFile" />
                @*@ViewBag.Message*@
            </div>
            <p>Note: In order to remove uploaded file and the generated files, user must press "Upload" button with null input.</p>
        }
        @ViewBag.Result

    </div>
    

