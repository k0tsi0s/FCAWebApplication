<script>
        $(document).ready(function () {

            var fullUrl = window.location.href;
            var pos = fullUrl.toLowerCase().lastIndexOf('/fca');         
            var newUrl = fullUrl.substring(0, pos + 4) + '/ShowFile';

            var showFile = Get(newUrl);
            if (showFile == 'False') {
                $('#FCATreeTool').hide();
                //$('#exportFile').hide();
            } else {
                $('#FCATreeTool').show();
                //$('#exportFile').show();
            }
        });

</script>


