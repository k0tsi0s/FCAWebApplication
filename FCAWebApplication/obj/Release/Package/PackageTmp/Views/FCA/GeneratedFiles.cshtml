@using FCAWebApplication.Models
@model List<FileModel>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css">
    <title>Generated Files</title>
</head>

<body>
    <br />
    <br />
    <p>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
    </p>
    <table id="generatedFiles" class="table table-bordered table-hover" style="width:100%">
        <thead>
            <tr>
                <th>File Name</th>
                <th>Options</th>
                <th> </th>
            </tr>
        </thead>

        <tbody>
            @foreach (FileModel file in Model)
            {
                <tr>
                    <td>@file.FileName</td>



                    <td>
                        <input value="Preview" type="button" onclick="previewFun('@file.FileName')" />
                    </td>
                    <td>@Html.ActionLink("Download", "DownloadFile", new { fileName = file.FileName })</td>
                </tr>
            }
        </tbody>

    </table>

    <div class="modal fade" id="previewFile">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">

                    <h4 class="modal-title">Preview</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>

                </div>

                <div class="modal-body" id="previewArea">
                    @{ if (ViewBag.Data != null)
                        {
                            foreach (string text in ViewBag.Data)
                            {
                                <h4>@text</h4>
                            }
                        }
                    }

                </div>

                <div class="modal-footer">

                </div>

            </div>
        </div>
    </div>
    <script type="text/javascript">

        function previewFun(fileName) {


            var showFile = Get('https://localhost:44325/fca/PreviewFileRequest?fileName=' + fileName);
            alert(showFile);
        }

        function Get(yourUrl) {
            var Httpreq = new XMLHttpRequest();
            // a new request
            Httpreq.open("GET", yourUrl, false);
            Httpreq.send(null);
            return Httpreq.responseText;
        }
    </script>
</body>
</html>

@section scripts
    {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#generatedFiles').DataTable();
        });


        
    </script>


         <script src='https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js'></script>

}